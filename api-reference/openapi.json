      "NewSchedule": {
        "required": ["date_from", "time_from", "time_to", "timezone", "minimum_hours", "repetition"],
        "type": "object",
        "properties": {
          "date_from": {
            "description": "Start date and time for the schedule",
            "type": "string",
            "example": "Mon Dec 15 2025 09:00:00 GMT-0800 (PST)"
          },
          "time_from": {
            "description": "Start time (HH:MM format, 24-hour)",
            "type": "string",
            "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$",
            "example": "09:00"
          },
          "time_to": {
            "description": "End time (HH:MM format, 24-hour)",
            "type": "string",
            "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$",
            "example": "17:00"
          },
          "timezone": {
            "description": "Timezone for the schedule",
            "type": "string",
            "example": "America/New_York"
          },
          "minimum_hours": {
            "description": "Minimum hours for this schedule shift",
            "type": "number",
            "format": "float",
            "example": 8.0
          },
          "repetition": {
            "description": "How the schedule repeats",
            "type": "string",
            "enum": ["never", "weekly", "bi-Weekly"],
            "example": "weekly"
          },
          "members": {
            "description": "Comma-separated list of user IDs",
            "type": "string",
            "example": "1,5,7,9"
          },
          "groupsId": {
            "description": "Comma-separated list of group IDs",
            "type": "string",
            "example": "2,3"
          },
          "day_repeat": {
            "description": "Comma-separated days for recurring schedules",
            "type": "string",
            "example": "mon,wed,fri"
          },
          "until": {
            "description": "End date for recurring schedules",
            "type": "string",
            "example": "Fri Dec 31 2025 17:00:00 GMT-0800 (PST)"
          }
        }
      },
